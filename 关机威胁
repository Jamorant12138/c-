#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{
	char input[20] = { 0 };
	system("shutdown -s -t 60");
	while (1)
	{
		printf("您的电脑将在一分钟内关机，输入 我是猪 取消关机\n");
		scanf("%s", input);
		if (strcmp(input, "我是猪") == 0)
		{
			system("shutdown -a");
			printf("收到");
			break;
		}
	}
	return 0;
}
