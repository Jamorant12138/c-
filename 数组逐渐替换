#include <stdio.h>

int main()
{
	char arr1[] = "welcome to bit!!!";
	char arr2[] = "#################";
	int sz = sizeof(arr2) / sizeof(arr2[0]);// /n计算大小
	int left = 0;
	int right = sz - 1;
	while (left <= right + 1)
	{
		printf("%s\n", arr2);
		arr2[left] = arr1[left];
		arr2[right] = arr1[right];
		left += 1;
		right -= 1;
	}
	return 0;
}
