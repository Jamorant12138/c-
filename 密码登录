#include <stdio.h>
#include <string.h>//记得.h，不然1643错误

int main()
{
	char password[9] = {"heyixuan"};//字符串用双引号
	int time = 0;
	char answer[10] = { 0 };
	while (time < 3)
	{
		scanf("%s", &answer);
		if (strcmp(answer,password) != 0)//字符比较用strcmp
		{
			printf("密码错误，请重试\n");
			time++;
		}
		else
		{
			printf("密码正确，登录成功\n");
			break;
		}
	}
	return 0;
}
